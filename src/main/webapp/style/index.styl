@import 'reset'
@import 'fonts'
@import 'utils'
@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

$green = #6bd689
$red = #e7624f
$orange = #fdb843
$black = #2b3238
$white = #ffffff
$gray = #e0e0e0
$darkgray = #bababa

$checkHeight = 25px
$checkMarginTop = 5px
html, body {
  height: 100%
}
body {
  padding: 0
  margin: 0
  font-family: 'Lato', 'Helvetica', 'Arial', 'Sans'
  font-size: 14px
  overflow: hidden
  background: #9C9C9C
  input, select, textarea {
    font-family: 'Lato', 'Helvetica', 'Arial', 'Sans'
    font-size: 14px
  }

  #app {
    height: 100%
    background: $black
    & > div {
      height: 100%
      display: flex
      flex-direction: column

      &.lost-connection {
        filter: grayscale(100%)
        -webkit-filter: grayscale(100%)
      }

      header {
        background: $white
        height: 100px
        cursor: pointer
        transition: transform 250ms ease-in-out
        z-index: 10

        &:hover {
          transform: scale(1.1)
          box-shadow: 0 0 24px rgba(0,0,0,.5)
        }

        h1 {
          flex: 1
          color: $white
          font-size: 36px
          text-align: center
          font-weight: 400
          line-height: 65px
        }

        p {
          flex: 1
          color: #fff
          text-align: center
          font-weight: 400
          font-size: 16px
        }

        &.SUCCESS {
          background-color: $green
        }

        &.WARNING {
          background-color: $orange
        }

        &.ERROR {
          background-color: $red
        }

        &.UNKNOWN {
          background-color: $darkgray
        }

      }

      main {
        flex: 1
        display: flex

        svg {
          position: absolute
          left: 0
          top: 0
          width: 100%
          height: 100%
          pointer-events: none

          .fgLine {
            stroke-width: 3
            fill: none
            stroke: $gray
          }

          .bgLine {
            stroke-width: 6
            fill: none
            stroke: rgba(255,255,255,.15)
          }
        }

        section.column {
          display: flex
          flex-direction: column
          justify-content: center
          position: relative
          border-left: 1px dotted rgba(255,255,255,.35)

          &:first-of-type {
            border: none
          }

          h2 {
            font-size: 16px
            text-align: center
            font-weight: 300
            color: $gray
            position: absolute
            top: 20px
            left: 0
            right: 0
          }

          section.row {
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            position: relative
            padding-top: 50px
            flex: 1
            border-top: 1px dotted rgba(255,255,255,.35)

            &:first-of-type {
              border: none
            }

            h2 {
              font-size: 16px
              text-align: center
              font-weight: 300
              color: $gray
              position: absolute
              top: 20px
              left: 0
              right: 0
            }

            div.box {
              display: flex
              flex-direction: column
              justify-content: center

              background: $white
              width: 70%
              margin-left: 10%
              margin-right: 10%
              margin-bottom: 2em
              border-radius: 3px
              box-shadow: 0 0 24px rgba(0,0,0,.5)
              display: flex
              flex-direction: column
              justify-content: center
              padding: 1em
              box-sizing: border-box
              cursor: pointer
              transition: .25s

              &:hover {
                transform: scale(1.1)
                box-shadow: 0 0 36px rgba(0,0,0,.75)
              }

              &.SUCCESS {
                background: $green
              }

              &.ERROR {
                background: $red
              }

              &.WARNING {
                background: $orange
              }

              &.UNKNOWN {
                background: $darkgray
              }
              div.checks {
                display: flex
                flex-wrap: wrap
                .check {
                  &.SUCCESS {
                    background: $green      
                  }
                  &.ERROR {
                    background: $red
                  }
                  &.WARNING {
                    background: $orange
                  }
                  &.UNKNOWN {
                    background: $darkgray
                  }

                  border: 1px solid white
                  margin: 0px 3px 0 0
                  padding: .25em .5em
                  border-radius: 2px
                  color: white
                  box-sizing: border-box
                  margin-top: $checkMarginTop
                  height: $checkHeight

                  overflow: hidden
                  white-space: nowrap
                  text-overflow: ellipsis

                  display: flex
                  align-items: center
                }

              }

              h3 {
                font-size: 18px
                color: $white
                font-weight: 500
                float: none
                margin-bottom: .2em
              }

              strong {
                float: left
                font-size: 14px
                display: block
                margin: .25em 0
                font-weight: 400
                color: $white
              }

              #more {
                text-align: center
                color: white
                font-weight: bolder
                font-size: 1.5em
                line-height: .25em
              }
            }
          }
        }
      }
    }
  }
}

.box-modal {
  $headerHeight = 40px
  display: flex
  flex-direction: column
  height: 100%
  header {
    height: $headerHeight
    background: #2C3E50
    font-size: 1.5em
    padding: .25em
    span {
      color: white
      line-height: $headerHeight
      padding-left: 1em;
    }
    button {
      float: right
      background: transparent
      padding-right: .5em;
      color: white
      border: 0
      outline: 0
      font-size: 20px
      line-height: $headerHeight
      &:hover {
        cursor: pointer
        color: #DFDFDF
      }
    }
  }
  main {
    display: flex
    flex: 1
    flex-direction: column
    padding: 1em 2em
    > h3 {
      font-weight: 500
      margin-bottom: 1em
      color: #2c3e50
      margin-top: 1em
      font-size: 18px
      > .fa {
        margin-right: .5em
      }
    }
    .message {
      color: #5C5C5C
      margin-bottom: 1em
    }
    .description {
      padding: 1em 1.5em
      background: #FBFBFB
      margin-bottom: 1em
      border: 1px solid #EAEAEA
    }
  }
  .checks {
    flex: 1
    overflow: auto
    .check {
      display: flex
      .status {
        display: inline-block
        width: 3px
      }
      .content {
        padding: 1em 1.5em
        background: #FBFBFB
        flex: 1
        border-top: 1px solid #EAEAEA
        border-right: 1px solid #EAEAEA
        color: #5C5C5C
        > h4 {
          margin-bottom: .5em
        }
      }
      &:last-child {
        .content {
          border-bottom: 1px solid #EAEAEA
        }
      }
    }
  }
}

.background {
  &.SUCCESS {
    background: $green
  }
  &.ERROR {
    background: $red
  }
  &.WARNING {
    background: $orange
  }
  &.UNKNOWN {
    background: $darkgray
  }
}

.ReactModal__Overlay {
  background: rgba(255,255,255,0)
  transition: background .5s
}

// Modal opened
.ReactModal__Body--open {
  #app {
    transform: scale(.9)
  }
}

.ReactModal__Content--after-open {
  animation: scaleUp .5s cubic-bezier(0.165, 0.840, 0.440, 1.000) forwards
}

// Modal closed
#app {
  transform: scale(1)
  transition: transform .5s
}

.ReactModal__Content--before-close {
  animation: scaleDown .5s cubic-bezier(0.165, 0.840, 0.440, 1.000) forwards
}

@keyframes scaleUp {
  0% {
    transform:scale(.8) translateY(1000px);
    opacity:0;
  }
  100% {
    transform:scale(1) translateY(0px);
    opacity:1;
  }
}

@keyframes scaleDown {
  0% {
    transform:scale(1) translateY(0px);
    opacity:1;
  }
  100% {
    transform:scale(.8) translateY(1000px);
    opacity:0;
  }
}