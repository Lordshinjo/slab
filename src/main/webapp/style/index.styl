@import 'reset'
@import 'fonts'
@import 'utils'
@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
@import '~vis/dist/vis.css'
@import '~react-day-picker/lib/style.css'

@import 'lib/Button'
@import 'components/Timeline'
@import 'components/BoardList'
@import 'components/BoxModal'

$green = #2ebd59
$red = #e7624f
$orange = #fdb843
$black = #2b3238
$white = #ffffff
$gray = #e0e0e0
$darkgray = #bababa
$blue = #2196f3

$checkHeight = 25px
$checkMarginTop = 5px
html, body {
  height: 100%
}
body {
  padding: 0
  margin: 0
  font-family: 'Lato', 'Helvetica', 'Arial', 'Sans'
  font-size: 14px
  overflow: hidden
  background: #9C9C9C
  input, select, textarea {
    font-family: 'Lato', 'Helvetica', 'Arial', 'Sans'
    font-size: 14px
  }

  #app {
    height: 100%
    background: $black
    & > div {
      height: 100%;
    }
    & .graph {
      height: 100%
      display: flex
      flex-direction: column

      &.lost-connection {
        filter: grayscale(100%)
        -webkit-filter: grayscale(100%)
      }

      header {
        height: 75px
        z-index: 10
        h1 {
          flex: 1
          color: $white
          font-size: 30px
          text-align: center
          font-weight: 400
          line-height: 50px
        }

        p {
          flex: 1
          color: #fff
          text-align: center
          font-weight: 400
          font-size: 16px
        }
      }

      main {
        flex: 1
        display: flex

        svg {
          position: absolute
          left: 0
          top: 0
          width: 100%
          height: 100%
          pointer-events: none

          .fgLine {
            stroke-width: 3
            fill: none
            stroke: $gray
          }

          .bgLine {
            stroke-width: 6
            fill: none
            stroke: rgba(255,255,255,.15)
          }
        }

        section.column {
          display: flex
          flex-direction: column
          justify-content: center
          position: relative
          border-left: 1px dotted rgba(255,255,255,.35)

          &:first-of-type {
            border: none
          }

          h2 {
            font-size: 16px
            text-align: center
            font-weight: 300
            color: $gray
            position: absolute
            top: 20px
            left: 0
            right: 0
          }

          section.row {
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            position: relative
            padding-top: 50px
            flex: 1
            border-top: 1px dotted rgba(255,255,255,.35)

            &:first-of-type {
              border: none
            }

            h2 {
              font-size: 16px
              text-align: center
              font-weight: 300
              color: $gray
              position: absolute
              top: 20px
              left: 0
              right: 0
            }

            div.box {
              display: flex
              flex-direction: column
              justify-content: center

              width: 70%
              margin-left: 10%
              margin-right: 10%
              margin-bottom: 2em
              border-radius: 3px
              box-shadow: 0 0 24px rgba(0,0,0,.5)
              display: flex
              flex-direction: column
              justify-content: center
              padding: 1em
              box-sizing: border-box
              cursor: pointer
              transition: .25s

              &:hover {
                transform: scale(1.1)
                box-shadow: 0 0 36px rgba(0,0,0,.75)
              }

              div.checks {
                display: flex
                flex-wrap: wrap
                .check {
                  border: 1px solid rgba(255,255,255,.5)
                  margin: 0px 3px 0 0
                  padding: .25em .5em
                  border-radius: 2px
                  color: white
                  box-sizing: border-box
                  margin-top: $checkMarginTop
                  height: $checkHeight

                  overflow: hidden
                  white-space: nowrap
                  text-overflow: ellipsis

                  display: flex
                  align-items: center
                }

              }

              h3 {
                font-size: 18px
                color: $white
                font-weight: 500
                float: none
                margin-bottom: .2em
              }

              strong {
                float: left
                font-size: 14px
                display: block
                margin: .25em 0
                font-weight: 400
                color: $white
              }

              #more {
                text-align: center
                color: white
                font-weight: bolder
                font-size: 1.5em
                line-height: .25em
              }
            }
          }
        }
      }
    }
  }
}

.background {
  background: $darkgray
  &.SUCCESS {
    background: $green
  }
  &.ERROR {
    background: $red
  }
  &.WARNING {
    background: $orange
  }
  &.UNKNOWN {
    background: $darkgray
  }
}

.color {
  &.SUCCESS {
    color: $green
  }
  &.ERROR {
    color: $red
  }
  &.WARNING {
    color: $orange
  }
  &.UNKNOWN {
    color: $darkgray
  }
}

.hidden {
  visibility: hidden
}